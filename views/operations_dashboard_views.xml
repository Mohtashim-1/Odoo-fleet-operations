    <!-- Action for Operations Dashboard -->
    <record id="action_operations_dashboard" model="ir.actions.act_window">
        <field name="name">Operations Dashboard</field>
        <field name="res_model">operations.dashboard</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create your first operations dashboard.
            </p>
            <p>
                Monitor vehicle, trip, contract, warehouse, operation point, and receipt/delivery KPIs, along with alerts for shortages and damages.
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_operations_dashboard_root"
              name="Operations"
              sequence="80"/>
    <menuitem id="menu_operations_dashboard"
              name="Dashboard"
              parent="menu_operations_dashboard_root"
              action="action_operations_dashboard"
              sequence="10"/>
