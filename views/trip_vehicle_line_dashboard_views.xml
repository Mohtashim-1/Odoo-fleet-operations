<odoo>
    <!-- 
      This is the Trip Vehicle Line Dashboard view.
      It contains all relevant fields for trip vehicle line management.
      The 'optional="show"' attribute allows users to hide/show columns as needed.
    -->
    <record id="view_trip_vehicle_line_tree_dashboard" model="ir.ui.view">
        <field name="name">trip.vehicle.line.tree.dashboard</field>
        <field name="model">trip.vehicle.line</field>
        <field name="arch" type="xml">
            <list string="Trip Vehicle Line Dashboard" create="false">
                <!-- Fields in the same order as car booking line dashboard -->
                <field name="region" optional="show"/>
                <field name="city" optional="show"/>
                <field name="trip_id" optional="show" widget="many2one"/>
                <field name="trip_type" optional="show"/>
                <field name="service_type_id" optional="show"/>
                <field name="car_model_id" optional="show"/>
                <field name="car_year" optional="show"/>
                <field name="start_date" optional="show"/>
                <field name="end_date" optional="show"/>
                <field name="customer_name" optional="show"/>
                <field name="guest_name" optional="show"/>
                <field name="mobile_no" optional="show"/>
                <field name="location_from" optional="show"/>
                <field name="location_to" optional="show"/>
                <field name="vehicle_id" optional="show"/>
                <field name="id_no" optional="show"/>
                <field name="driver_name" optional="show"/>
                <field name="duration" optional="show"/>
                <field name="qty" optional="show"/>
                <field name="trip_status" optional="show"/>
                <field name="create_uid" optional="show"/>
                <field name="guest_ids" widget="many2many_tags" optional="hide"/>
            </list>
        </field>
    </record>

    <!-- Search View for Trip Vehicle Line Dashboard -->
    <record id="view_trip_vehicle_line_search_dashboard" model="ir.ui.view">
        <field name="name">trip.vehicle.line.search.dashboard</field>
        <field name="model">trip.vehicle.line</field>
        <field name="arch" type="xml">
            <search string="Search Trip Vehicle Lines">
                <field name="trip_id"/>
                <field name="customer_name"/>
                <field name="region"/>
                <field name="city"/>
                <field name="trip_type"/>
                <field name="trip_status"/>
                <field name="create_uid"/>
                <filter string="Confirmed" name="confirmed" domain="[('trip_status', '=', 'confirm')]"/>
                <filter string="Scheduled" name="scheduled" domain="[('trip_status', '=', 'scheduled')]"/>
                <filter string="Departed" name="departed" domain="[('trip_status', '=', 'departed')]"/>
                <filter string="Completed" name="completed" domain="[('trip_status', '=', 'completed')]"/>
                <filter string="Cancelled" name="cancelled" domain="[('trip_status', '=', 'cancelled')]"/>
                <group expand="0" string="Group By">
                    <filter string="Region" name="group_region" context="{'group_by': 'region'}"/>
                    <filter string="City" name="group_city" context="{'group_by': 'city'}"/>
                    <filter string="Trip Type" name="group_trip_type" context="{'group_by': 'trip_type'}"/>
                    <filter string="Trip Status" name="group_trip_status" context="{'group_by': 'trip_status'}"/>
                    <filter string="Created By" name="group_create_uid" context="{'group_by': 'create_uid'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Form View for Trip Vehicle Line Dashboard -->
    <record id="view_trip_vehicle_line_form_dashboard" model="ir.ui.view">
        <field name="name">trip.vehicle.line.form.dashboard</field>
        <field name="model">trip.vehicle.line</field>
        <field name="arch" type="xml">
            <form string="Trip Vehicle Line">
                <header>
                    <button name="action_view_trip" 
                            type="object" 
                            string="View Trip" 
                            class="btn-primary"
                            invisible="not trip_id"/>
                    <button name="action_view_car_booking_line" 
                            type="object" 
                            string="View Car Booking Line" 
                            class="btn-secondary"
                            invisible="not car_booking_line_id"/>
                    <button name="action_open_checklist" 
                            type="object" 
                            string="Open Checklist" 
                            class="btn-info"/>
                </header>
                <sheet>
                    <group>
                        <field name="region"/>
                        <field name="city"/>
                        <field name="trip_id"/>
                        <field name="trip_type"/>
                        <field name="service_type_id"/>
                        <field name="car_model_id"/>
                        <field name="car_year"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="customer_name"/>
                        <field name="guest_name"/>
                        <field name="mobile_no"/>
                        <field name="location_from"/>
                        <field name="location_to"/>
                        <field name="vehicle_id"/>
                        <field name="id_no"/>
                        <field name="driver_name"/>
                        <field name="duration"/>
                        <field name="qty"/>
                        <field name="trip_status"/>
                        <field name="create_uid"/>
                        <field name="guest_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action for Trip Vehicle Line Dashboard -->
    <record id="action_trip_vehicle_line_dashboard" model="ir.actions.act_window">
        <field name="name">Trip Vehicle Line Dashboard</field>
        <field name="res_model">trip.vehicle.line</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_trip_vehicle_line_tree_dashboard"/>
        <field name="search_view_id" ref="view_trip_vehicle_line_search_dashboard"/>
        <field name="views" eval="[(ref('view_trip_vehicle_line_tree_dashboard'), 'list'),
                                   (ref('view_trip_vehicle_line_form_dashboard'), 'form')]"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                No trip vehicle lines found.
            </p>
            <p>
                Trip vehicle lines are created when you add vehicles to trip profiles.
            </p>
        </field>
    </record>

    <!-- Menu Item for Trip Vehicle Line Dashboard -->
    <menuitem id="menu_trip_vehicle_line_dashboard"
              name="Trip Line Dashboard"
              parent="fleet_operations.menu_trip_profile_root"
              action="action_trip_vehicle_line_dashboard"
              sequence="20"/>

</odoo> 