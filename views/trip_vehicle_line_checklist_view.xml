<?xml version="1.0" encoding="utf-8"?>
<odoo>

<record id="view_trip_vehicle_line_checklist_line_tree" model="ir.ui.view">
    <field name="name">trip.vehicle.line.checklist.line.tree</field>
    <field name="model">trip.vehicle.line.checklist.line</field>
    <field name="arch" type="xml">
        <list editable="bottom">
            <field name="item_description"/>
            <field name="in_status"/>
            <field name="out_status"/>
            <field name="remarks"/>
        </list>
    </field>
</record>


<record id="view_trip_vehicle_line_checklist_form" model="ir.ui.view">
    <field name="name">trip.vehicle.line.checklist.form</field>
    <field name="model">trip.vehicle.line.checklist</field>
    <field name="arch" type="xml">
        <form string="Checklist">
            <group>
                <field name="name"/>
                <field name="trip_vehicle_line_id" readonly="1"/>
            </group>
            <field name="checklist_line_ids" context="{'default_checklist_id': id}">
                <list editable="bottom">
                    <field name="item_description"/>
                     <field name="in_status" widget="checkbox"/>
    <field name="out_status" widget="checkbox"/>
                    <field name="remarks"/>
                </list>
            </field>
        </form>
    </field>
</record>

<record id="action_trip_vehicle_line_checklist" model="ir.actions.act_window">
    <field name="name">Trip Vehicle Checklist</field>
    <field name="res_model">trip.vehicle.line.checklist</field>
    <field name="view_mode">list,form</field>
    <field name="target">current</field>
</record>

</odoo>